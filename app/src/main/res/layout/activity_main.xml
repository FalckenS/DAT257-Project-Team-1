<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <androidx.appcompat.widget.AppCompatButton
            android:text=""
            android:layout_width="48dp"
            android:layout_height="48dp" android:id="@+id/searchButton"
            app:icon="@android:drawable/ic_menu_search"
            android:layout_marginEnd="53dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="28dp"
            android:contentDescription="Submit search" app:iconGravity="textStart" app:iconPadding="0dp"
            android:background="@color/search_button_color"
            app:layout_constraintStart_toEndOf="@+id/textInputLayout"
            android:foreground="@android:drawable/ic_menu_search"/>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="308dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="28dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="40dp"
            app:layout_constraintEnd_toStartOf="@+id/searchButton" android:id="@+id/textInputLayout"
            app:hintEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/search_text"
                android:paddingTop="25dp"
                android:paddingBottom="5dp"
                android:imeOptions="actionDone"
                android:singleLine="true" android:id="@+id/searchBar"/>
    </com.google.android.material.textfield.TextInputLayout>
</androidx.constraintlayout.widget.ConstraintLayout>